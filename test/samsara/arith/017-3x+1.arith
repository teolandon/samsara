let iseven:num->bool = fun (x:num) : bool => (x % 2) < 1 in
let func:num->num->num =
  fix f (depth:num) : num->num =>
  fun (n:num) : num =>
    if n < 2
    then depth
    else
      if (iseven <- n)
      then f <- (depth + 1) <- (n / 2)
      else f <- (depth + 1) <- (3 * n + 1)
in
let var:num = 6 in
func <- 0 <- var
